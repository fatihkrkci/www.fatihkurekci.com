@model MyResumeWebsite.Models.Entity.Certificates

@{
    ViewBag.Title = "GetCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Edit Certificate</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">

                <div class="row">

                    <div class="form-group col-md-6">
                        @Html.Label("ID")
                        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @disabled = "disabled" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.Label("Foundation")
                        @Html.TextBoxFor(x => x.Foundation, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-9">
                        @Html.Label("Name")
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-3">
                        @Html.Label("Choose New Picture")
                        <input type="file" name="Picture" />
                    </div>

                    <div class="form-group col-md-12">
                        <button class="btn btn-info">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>