@using MyResumeWebsite.Models.Entity
@model List<AboutMe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h1 class="card-title" style="font-size: 1.5rem !important;">About Me</h1>
        </div>
        <div class="card-body">
            <form method="post">
                @foreach (var aboutMe in Model)
                {
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label>Name</label>
                            <input type="text" class="form-control" name="Name" value="@aboutMe.Name" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Surname</label>
                            <input type="text" class="form-control" name="Surname" value="@aboutMe.Surname" />
                        </div>

                        <div class="form-group col-md-4">
                            <label>Title</label>
                            <input type="text" class="form-control" name="Title" value="@aboutMe.Title" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Phone</label>
                            <input type="text" class="form-control" name="Phone" value="@aboutMe.Phone" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" value="@aboutMe.Email" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>Address</label>
                            <input type="text" class="form-control" name="Address" value="@aboutMe.Address" />
                        </div>

                        @*<div class="form-group col-md-12">
                            <label>Picture</label>
                            <input type="text" class="form-control" name="Picture" value="@aboutMe.Picture"></input>
                        </div>*@

                        <div class="form-group col-md-6">
                            <label>Title Of Description</label>
                            <input type="text" class="form-control" name="TitleOfDescription" value="@aboutMe.TitleOfDescription" />
                        </div>

                        <div class="form-group col-md-12">
                            <label>Description</label>
                            <textarea type="text" class="form-control" rows="4" name="Description">@aboutMe.Description</textarea>
                        </div>

                        <div class="form-group col-md-12">
                            <button class="btn btn-info">Save</button>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</div>