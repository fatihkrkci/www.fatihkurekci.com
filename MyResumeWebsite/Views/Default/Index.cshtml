@using MyResumeWebsite.Models.Entity
@model List<AboutMe>

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Fatih Kürekçi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Fatih Kürekçi's Resume Website" />
    <meta name="keywords" content="Fatih Kürekçi, Resume, Software Developer" />
    <meta name="author" content="Fatih Kürekçi" />

    <link href="https://fonts.googleapis.com/css?family=Space+Mono" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">

    <link rel="stylesheet" href="~/Template/profile/css/animate.css">
    <link rel="stylesheet" href="~/Template/profile/css/icomoon.css">
    <link rel="stylesheet" href="~/Template/profile/css/bootstrap.css">
    <link rel="stylesheet" href="~/Template/profile/css/style.css">
    <script src="~/Template/profile/js/modernizr-2.6.2.min.js"></script>
    <link rel="icon" href="~/images/tab-logo.png">

</head>
<body>
    <div class="fh5co-loader"></div>
    <div id="page">
        @foreach (var aboutMe in Model)
        {
            <header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(/images/profile-photo.jpg);" data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            <div class="display-t js-fullheight">
                                <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
                                    <div class="profile-thumb" style="background: url(/images/profile-photo.jpg);"></div>
                                    <h1><span>@aboutMe.Name @aboutMe.Surname</span></h1>
                                    <h3><span>@aboutMe.Title</span></h3>
                                    <p>
                                        @Html.Action("SocialMedia")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <div id="fh5co-about" class="animate-box">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                            <h2>About Me</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <ul class="info">
                                <li>
                                    <span class="first-block">Full Name:</span>
                                    <span class="second-block">@aboutMe.Name @aboutMe.Surname</span>
                                </li>
                                @if (!string.IsNullOrEmpty(aboutMe.Phone))
                                {
                                    <li>
                                        <span class="first-block">Phone:</span>
                                        <span class="second-block">@aboutMe.Phone</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(aboutMe.Email))
                                {
                                    <li>
                                        <span class="first-block">Email:</span>
                                        <span class="second-block">@aboutMe.Email</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(aboutMe.Address))
                                {
                                    <li>
                                        <span class="first-block">Address:</span>
                                        <span class="second-block">@aboutMe.Address</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-8">
                            <h2>@aboutMe.TitleOfDescription</h2>
                            <p>@aboutMe.Description</p>
                            <p>
                                @Html.Action("SocialMedia")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @Html.Action("Experiences")

        @Html.Action("Skills")

        @Html.Action("Certificates")

        @Html.Action("Projects")

        <div id="fh5co-started" class="fh5co-bg-dark">
            <div class="overlay"></div>
            <div class="container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                        <h2>Download My Resume</h2>
                        <p>
                            <a href="~/resumes/Fatih_Kurekci_CV_Turkce.pdf" target="_blank" class="btn btn-default btn-lg">Türkçe</a>
                            <a href="~/resumes/Fatih_Kurekci_CV_English.pdf" target="_blank" class="btn btn-default btn-lg">English</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        @Html.Action("Contact")

    </div>

    <div id="fh5co-footer" style="border-top: 10px solid #FF9000 !important;">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <p>&copy; @DateTime.Now.Year <a href="https://fatihkurekci.com" target="_blank">Fatih Kürekçi</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up22"></i></a>
    </div>

    <script src="~/Template/profile/js/jquery.min.js"></script>
    <script src="~/Template/profile/js/jquery.easing.1.3.js"></script>
    <script src="~/Template/profile/js/bootstrap.min.js"></script>
    <script src="~/Template/profile/js/jquery.waypoints.min.js"></script>
    <script src="~/Template/profile/js/jquery.stellar.min.js"></script>
    <script src="~/Template/profile/js/jquery.easypiechart.min.js"></script>
    <script src="~/Template/profile/js/main.js"></script>

</body>
</html>

