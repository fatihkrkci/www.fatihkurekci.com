@model MyResumeWebsite.Models.Entity.SocialMedia

@{
    ViewBag.Title = "GetSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Edit Social Media Account</h3>
        </div>
        <div class="card-body">
            <form method="post">

                <div class="row">

                    <div class="form-group col-md-6">
                        @Html.Label("ID")
                        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @disabled = "disabled" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.Label("Platform Name")
                        @Html.TextBoxFor(x => x.PlatformName, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.Label("Link")
                        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.Label("Icon")
                        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-12">
                        <button class="btn btn-info">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>