@using MyResumeWebsite.Models.Entity
@model List<Projects>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title" style="font-size: 1.5rem !important;">My Projects</h3>
            <div class="card-tools">
                <a class="btn btn-primary btn-sm" href="/Project/Add">
                    <i class="fas fa-plus"></i>
                    Add New Project
                </a>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table id="datatable" class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Picture</th>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td><img height="150" src="@item.Picture"></td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>
                                @{
                                    var description = item.Description;
                                    if (!string.IsNullOrEmpty(description))
                                    {
                                        if (description.Length > 30)
                                        {
                                            description = description.Substring(0, 30) + "...";
                                        }
                                    }
                                }
                                @description
                            </td>
                            <td>@item.Date</td>
                            <td>@(item.Status.HasValue ? (item.Status.Value ? "Active" : "Passive") : "Unknown")</td>
                            <td>
                                <a class="btn btn-info btn-sm" href="/Project/Edit/@item.ID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-success btn-sm" href="/Project/Active/@item.ID">
                                    <i class="fas fa-check"></i>
                                    Active
                                </a>
                                <a class="btn btn-warning btn-sm" href="/Project/Passive/@item.ID">
                                    <i class="fas fa-archive"></i>
                                    Passive
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Project/Delete/@item.ID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- DataTables -->
<link rel="stylesheet" href="~/Template/AdminLTE-3.0.4/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/Template/AdminLTE-3.0.4/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
